<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">

  <!--spring boot base preference-->
  <include resource="org/springframework/boot/logging/logback/base.xml" />
  <include resource="console-appender.xml" />
  <include resource="file-appender.xml" />
  <include resource="json-appender.xml" />

  <!--logging class name: console -> logging level - trace-->
  <logger name="console" level="TRACE" >
    <appender-ref ref="console" />
  </logger>

  <!--logging class name: console, logging level: info-->
  <logger name="file" level="INFO" >
    <appender-ref ref="file" />
  </logger>

  <!--logging class name: console, logging level: info-->
  <logger name="json" level="INFO" >
    <appender-ref ref="json" />
  </logger>

</configuration>
